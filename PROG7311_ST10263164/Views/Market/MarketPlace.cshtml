@using PROG7311_ST10263164.ViewModels;
@model ProductsViewModel;
@{
    ViewData["Title"] = "Market Page";
}

<body>

    <div class="marketbox">
        <div class="marketcardbox">                       <!--this div holds and arranges market cards which are store items-->
            @foreach (var product in Model.ProductList)
            {
                <div class="marketcard">                   <!--these are the store items/market cards-->
                    <h4>@product.ProductName</h4>
                    <hr>
                    <p>@product.Category</p>
                    <p>@product.ProductDate</p>
                    <p>@product.ProductDescription</p>
                </div>
            }
        </div>

    </div>

</body>
