@using PROG7311_ST10263164.ViewModels
@model PROG7311_ST10263164.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Market Page";
}

<body>
    <div class="marketbox">
        <div class="card">
            <form asp-action="FilterbyCategory" asp-controller="Market" method="post">
                <h3>Filter by category</h3>
                <div>
                    <input asp-for="CategoryFilter" type="text" class="form-label" />
                    <span asp-validation-for="CategoryFilter" class="text-danger"></span>
                </div>
                <button type="submit">search by category</button>
            </form>
        </div>
    </div>
    <div class="marketbox">
        <div>
        </div>
        <div class="marketcardbox">
            <!--this div holds and arranges market cards which are store items-->
            @if (Model.ProductList != null)
            {
                @foreach (var product in Model.ProductList)
                {
                    <div class="marketcard">
                        <h4>@product.ProductName</h4>
                        <hr>
                        <p>@product.Category</p>
                        <p>@product.ProductDate</p>
                        <p>@product.ProductDescription</p>
                    </div>
                }
            }
        </div>
    </div>
</body>
